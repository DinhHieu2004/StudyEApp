<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Ảnh đại diện bài học -->
        <ImageView
            android:id="@+id/imageScene"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/titleScene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scene Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/descScene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short scene description"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Tag / Category -->
        <TextView
            android:id="@+id/tagScene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_course_tag"
            android:textColor="@color/black"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
