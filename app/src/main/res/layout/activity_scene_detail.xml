<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Nội dung chính -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomButtons"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back + Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/arrow_back"/>

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4A90E2"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Image -->
            <ImageView
                android:id="@+id/imageCourse"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"
                android:src="@drawable/placeholder_image" />

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="top">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description:"
                        android:textStyle="bold"
                        android:textColor="#003366"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This is a sample description."
                        android:textSize="14sp"
                        android:textColor="#2C3E50"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/textTagTopic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic"
                        android:background="@drawable/bg_course_tag"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/textTagLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:background="@drawable/bg_course_tag"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Estimated time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated time:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 minutes"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Dialogue -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialogue Preview"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textDialogue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More..."
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom buttons (cố định) -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="2"
        android:paddingHorizontal="0dp">

        <android.widget.Button
            android:id="@+id/btnBasicPractice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Basic Practice"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:background="@drawable/bg_bottom_left"/>

        <!-- Đường kẻ -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />

        <android.widget.Button
            android:id="@+id/btnAiPractice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AI Practice"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_bottom_right" />
    </LinearLayout>
</RelativeLayout>
